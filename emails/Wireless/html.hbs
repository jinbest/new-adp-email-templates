<html>

<head>
  <link href="https://fonts.googleapis.com/css2?family=Poppins" rel="stylesheet" />
  <style>
    body {
      font-family: "Poppins", sans-serif !important;
      margin: 0;
      background: #ddd;
      padding: 30px 0;
    }

    table {
      width: 100%;
    }

    table tr,
    table td,
    th {
      padding: 0;
      margin: 0;
    }

    p {
      padding: 0;
      margin: 1px 0;
      color: #313149;
    }

    button:hover {
      opacity: 0.7;
    }

    span {
      color: #313149;
    }

    a {
      text-decoration: none;
      width: fit-content;
      color: #313149;
    }

    a:hover {
      opacity: 0.8;
    }

    .main-div {
      width: 100%;
      max-width: 700px;
      box-shadow: -10px -10px 30px rgba(174, 174, 192, 0.4),
        -10px -10px 30px #ffffff, 10px 10px 30px rgba(174, 174, 192, 0.4);
      margin: auto;
      background-color: #ffffff;
    }

    .header {
      padding: 20px 20px 70px 20px;
      background-size: cover;
      background-repeat: no-repeat;
    }

    .logo-header {
      height: 35px;
      width: 40%;
    }

    .logo-header img {
      height: 100%;
    }

    .header-text {
      text-align: right;
      width: 60%;
    }

    .header-text p {
      color: white;
      font-size: 16px;
      line-height: 22px;
      width: 300px;
      margin-left: auto;
      text-align: right;
    }

    .text-title {
      font-size: 22px;
      font-weight: bold;
    }

    .text-subtitle {
      font-size: 18px;
      font-weight: bold;
    }

    .text-theme-title {
      font-size: 16px;
      font-weight: 600;
    }

    .text-theme-content {
      font-size: 16px;
      font-weight: 200;
    }

    .text-content {
      font-size: 14px;
      font-weight: 200;
    }

    .mid-text {
      font-size: 12px;
      font-weight: 200;
    }

    .t-bold {
      font-weight: bold;
    }

    .col-white {
      color: white;
    }

    .col-black {
      color: black;
    }

    .container {
      padding: 0 30px;
    }

    .section-1 {
      text-align: center;
    }

    .box {
      background: linear-gradient(#fff, #fff) padding-box,
        linear-gradient(to right, #3677a1, #4d4d4d) border-box;
      color: #313149;
      padding: 15px;
      border: 2px solid transparent;
      border-radius: 5px;
      display: inline-block;
      height: -webkit-fill-available;
    }

    .liner {
      margin: 5px auto;
      background: linear-gradient(to right, #3677a1, #4d4d4d) border-box;
      color: #313149;
      display: inline-block;
      height: 2px;
      width: 100%;
      border: none;
      outline: none;
    }

    .sec1-card-1 {
      text-align: left;
      margin-top: 20px;
    }

    .sec1-card-1 table {
      margin-top: 10px;
    }

    .sec1-info-card-desktop {
      margin-top: 10px;
      position: relative;
      height: 265px;
    }

    .nearest-location {
      text-align: left;
      width: 50%;
      height: 100%;
    }

    .nearest-location>div {
      margin-right: auto;
      width: calc(100% - 38px);
      text-align: center;
    }

    .buttons {
      margin-top: 10px;
    }

    .buttons td {
      width: 50%;
    }

    .buttons button {
      height: 30px;
      width: 100%;
      border: none;
      outline: none;
      background: #3677a1;
      text-align: center;
      color: white;
      font-size: 12px;
      border-radius: 15px;
      cursor: pointer;
      width: calc(100% - 3px);
      margin-top: 5px;
      max-width: 200px;
    }

    .customer-information {
      text-align: right;
      width: 50%;
      height: 100%;
    }

    .customer-information>div {
      margin-left: auto;
      width: calc(100% - 38px);
      text-align: center;
    }

    .book-appointment {
      text-align: center;
      padding: 20px 0;
    }

    .book-appointment button {
      width: 270px;
      height: 40px;
      background: white;
      border-radius: 20px;
      text-align: center;
      border: 2px solid #3677a1;
      cursor: pointer;
      font-weight: bold;
      font-size: 16px;
      color: #3677a1;
      margin-bottom: 10px;
    }

    .book-appointment p {
      text-transform: uppercase;
    }

    .section-2-desktop {
      padding: 20px 0;
      position: relative;
    }

    .open-late,
    .battery-money {
      width: 50%;
    }

    .section-2-desktop td>div {
      width: calc(100% - 20px);
    }

    .card-shadow {
      position: relative;
      padding: 1px 2px 2px 1px;
      background: linear-gradient(to right bottom, white, rgb(241, 238, 238)) border-box;
      border-radius: 5px;
      margin: 10px 0;
    }

    .card {
      background: #ffffff;
      border-radius: 5px;
      padding: 15px;
    }

    .section-3 {
      padding: 20px 0;
      text-align: center;
    }

    .section-4-desktop {
      padding: 20px 0;
      position: relative;
    }

    .bounce {
      width: calc(100% - 38px);
      margin-right: auto;
      background: #4ccaf3;
      box-shadow: 0px 10px 12px rgba(0, 0, 0, 0.25);
      border-radius: 5px;
      padding: 25px 15px 0 15px;
      text-align: center;
      height: 270px;
      position: relative;
    }

    .bounce img {
      position: absolute;
      bottom: 0;
      left: 20%;
    }

    .mobile-groups {
      width: calc(100% - 38px);
      margin-left: auto;
      background: #1c4d6c;
      padding: 15px;
      text-align: center;
      box-shadow: 0px 10px 12px rgba(0, 0, 0, 0.25);
      border-radius: 5px;
      color: white;
      height: 265px;
    }

    .mobile-groups img {
      min-width: 150px;
    }

    .mobile-groups button {
      font-size: 12px;
      background: #3677a1;
      box-shadow: 0px 10px 12px rgba(0, 0, 0, 0.25);
      border-radius: 20px;
      height: 30px;
      width: 170px;
      border: none;
      outline: none;
      cursor: pointer;
      color: white;
      margin: 5px 0;
    }

    .section-5 {
      padding: 20px 0;
      text-align: center;
    }

    .section-5 a {
      color: black;
    }

    .fa-icon-button {
      cursor: pointer;
      width: 30px;
      height: 30px;
      text-align: center;
      border: 1px solid #4d4d4d;
      border-radius: 20px;
    }

    .fa-icon-button img {
      height: 60%;
      margin-top: 20%;
    }

    .fa-icon-button:hover {
      opacity: 0.7;
    }

    .fa-icon-button i {
      margin: 7px;
    }

    .footer {
      background-color: #4d4d4d;
      height: 35px;
      padding: 20px 20px 15px;
    }

    .footer a {
      color: white;
      white-space: nowrap;
    }

    .footer td {
      width: 33.33%;
    }

    .footer img {
      height: 30px;
    }

    .header-mobile {
      display: none;
      text-align: center;
    }

    .header-mobile p {
      color: white;
    }

    .header-mobile img {
      height: 35px;
    }

    .sec1-info-card-mobile {
      display: none;
    }

    .section-2-mobile,
    .section-4-mobile {
      display: none;
      padding: 20px 0;
    }

    @media (max-width: 600px) {
      .text-title {
        font-size: 18px;
      }

      .text-subtitle {
        font-size: 16px;
      }

      .text-theme-title,
      .text-theme-content {
        font-size: 14px;
      }

      .text-content {
        font-size: 13px;
      }

      .mid-text {
        font-size: 11px;
      }

      .section-2-desktop {
        display: none;
      }

      .section-2-mobile {
        display: block;
      }
    }

    @media (max-width: 520px) {

      .header-desktop,
      .sec1-info-card-desktop {
        display: none;
      }

      .header-mobile {
        display: block;
      }

      .header {
        padding: 25px 20px 115px 20px;
      }

      .section-1 {
        margin-top: -50px;
      }

      .sec1-info-card-mobile {
        display: block;
      }

      .sec1-info-card-mobile .box {
        width: calc(100% - 36px);
        margin-top: 10px;
      }

      .book-appointment button {
        width: 100%;
      }

      .section-4-desktop {
        display: none;
      }

      .section-4-mobile {
        display: block;
        padding-top: 0;
      }

      .bounce,
      .mobile-groups {
        width: calc(100% - 30px);
        margin: 20px auto 0;
        height: auto;
      }

      .bounce img {
        position: inherit;
        left: 0;
      }
    }

    @media (max-width: 375px) {
      .footer img {
        height: 20px;
      }

      .container {
        padding: 0 15px;
      }
    }
  </style>
</head>

<body>
